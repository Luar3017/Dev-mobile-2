<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentHabito">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TvHabito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="@string/h_bitos"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHabito"
        android:layout_width="409dp"
        android:layout_marginTop="36dp"
        android:layout_height="694dp">

    </androidx.recyclerview.widget.RecyclerView>

   <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonAddHabito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:contentDescription="@string/adicionar"
        android:focusable="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="360dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#2196F3" />

</FrameLayout>